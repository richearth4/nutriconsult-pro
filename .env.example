# NutriConsult Pro - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nutriconsult
DATABASE_SSL=true

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
SESSION_SECRET=your-session-secret-change-this
BCRYPT_ROUNDS=10

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Stripe Payment
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal Payment
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Email Service (Nodemailer/SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@nutriconsult.com

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=nutriconsult-uploads
AWS_REGION=us-east-1

# Application
NODE_ENV=production
PORT=5001
FRONTEND_URL=http://localhost:5001
API_URL=http://localhost:5001
JWT_EXPIRES_IN=24h

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:5001

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://xxx@sentry.io/xxx

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PDF_REPORTS=true
ENABLE_SUBSCRIPTIONS=true
